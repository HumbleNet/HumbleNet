{
	"version": 3,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 9,
		"patch": 0
	},
	"configurePresets": [
		{
			"name": "base",
			"binaryDir": "build/${presetName}"
		},
		{
			"name": "ninja-debug",
			"inherits": ["base"],
			"generator": "Ninja",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": {
					"type": "BOOL",
					"value": "Debug"
				}
			}
		},
		{
			"name": "ninja-release",
			"inherits": ["base", "ninja-debug"],
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": {
					"type": "BOOL",
					"value": "Release"
				}
			}
		},
		{
			"name": "ninja-multi",
			"inherits": ["base"],
			"generator": "Ninja Multi-Config"
		},
		{
			"name": "xcode",
			"inherits": ["base"],
			"generator": "Xcode",
			"toolset": "buildsystem=1"
		}
	],
	"buildPresets": [
		{
			"name": "ninja-debug",
			"configurePreset": "ninja-debug"
		},
		{
			"name": "ninja-release",
			"configurePreset": "ninja-release"
		},
		{
			"name": "ninja-multi",
			"configurePreset": "ninja-multi"
		},
		{
			"name": "xcode",
			"configurePreset": "xcode"
		}
	]
}